<script type="text/template" id="magicbox-setting-template">
  <div class="about">
    <div class="about_top">
      <div class="left">
        <div class="about_avatar">

          <img alt="rachmatm" src="http://localhost:3000/assets/images/fallback/thumb_big_default.png">

        </div>
      </div>
      <div class="left">
        <div class="big_badge">0</div>
        <div class="nickname_realname">

          <div class="show-hide-edit-panel">
            <div class="show-hide-edit-panel-display">
              <span class="nickname"><#= username #></span>
            </div>
            <div class="show-hide-edit-panel-input hidden">
              <%= form_tag profiles_path, :method => 'put', :id => 'setting-form-username' do  %>
                <input type="text" name="profile[username]" value="<#= username #>">
              <% end %>
            </div>
          </div>

          <br class="clear">

          <div class="show-hide-edit-panel">
            <div class="show-hide-edit-panel-display">
              <span class="realname"><#= realname #></span>
            </div>
            <div class="show-hide-edit-panel-input hidden">
              <%= form_tag profiles_path, :method => 'put', :id => 'setting-form-realname' do  %>
                <input type="text" name="profile[realname]" value="<#= realname #>">
              <% end %>
            </div>
          </div>

        </div>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>
    </div>


     <div class="about_link">
        <span class="no_margin_left"><a href="#">0</a> <p>Jots</p></span>
        <span class="no_margin_left"><a href="#">0</a> <p>Followers</p></span>
        <span class="no_margin_left"><a href="#">0</a> <p>Following</p></span>
        <span class="no_margin_left"><a href="#">0</a> <p>Following</p></span>
        <div class="badge_about">0</div>
      </div>

    
    <div class="clear"></div>
  </div>
  <div class="email_password">
    <div class="left_path">
      <span class="email_text">Email</span>
      <div class="email_path">
        <%= form_tag profiles_path, :method => 'put', :id => 'setting-form-email' do  %>
          <div>
            <input type="text" value="<#= email #>" name="profile[email]">
            <input type="submit" class="but_save_popup" value="Save">
          </div>
        <% end %>
        <span class="email_information">your email wil not shown to public and it will be used for password recovery</span>
      </div>
    </div>
    <div class="right_path">
      <span class="pass_text">Password</span>
      <div class="pass_path">
        <%= form_tag profiles_path, :method => 'put', :id => 'setting-form-password' do  %>
          <div>
            <input type="password" value="" class="no_margin_top" name="profile[password]">
            <input type="password" value="" name="profile[password_confirmation]" id="profile_password_confirmation">
            <input type="submit" class="save_style but_save_popup" value="Save">
          </div>
        <% end %>
        <span class="pass_information">6-30 characters</span>
      </div>
    </div>
    <div class="clear"></div>
  </div>
  <div class="privacy">
    <span class="privacy_text">Privacy</span>
    <%= form_tag profiles_path, :method => 'put', :id => 'setting-form-privacy' do  %>

      <div>
        <table class="account_setting_table">
          <tbody>
            <tr>
              <td class="td_tittle">&nbsp;</td>
              <td class="td_radio">Everyone</td>
              <td class="td_radio">Friends</td>
              <td class="td_radio">Hide</td>
              <td>&nbsp;</td>
            </tr>
            <tr>
              <td class="border_bottom_table td_tittle">Jots</td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_privacy_jot]" value="everyone" <# if(setting_privacy_jot == 'everyone'){ #> checked="checked" <# } #> ></td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_privacy_jot]" value="friends" <# if(setting_privacy_jot == 'friends'){ #> checked="friends" <# } #> ></td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_privacy_jot]" value="hide"  <# if(setting_privacy_jot == 'hide'){ #> checked="hide" <# } #> ></td>
              <td class="border_bottom_table">&nbsp;</td>
            </tr>
            <tr>
              <td class="border_bottom_table td_tittle">Show Location</td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_privacy_location]" value="everyone" <# if(setting_privacy_location == 'everyone'){ #> checked="checked" <# } #> ></td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_privacy_location]" value="friends" <# if(setting_privacy_location == 'friends'){ #> checked="checked" <# } #> ></td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_privacy_location]" value="hide" <# if(setting_privacy_location == 'hide'){ #> checked="checked" <# } #> ></td>
              <td class="border_bottom_table">&nbsp;</td>
            </tr>
            <tr>
              <td class="border_bottom_table td_tittle">Show Kudos</td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_privacy_kudos]" value="everyone" <# if(setting_privacy_kudos == 'everyone'){ #> checked="checked" <# } #> ></td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_privacy_kudos]" value="friends" <# if(setting_privacy_kudos == 'friends'){ #> checked="checked" <# } #> ></td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_privacy_kudos]" value="hide" <# if(setting_privacy_kudos == 'hide'){ #> checked="checked" <# } #> ></td>
              <td class="border_bottom_table">&nbsp;</td>
            </tr>
            <tr>
              <td class="td_tittle">&nbsp;</td>
              <td class="td_radio">&nbsp;</td>
              <td class="td_radio">&nbsp;</td>
              <td class="td_radio">&nbsp;</td>
              <td>
                <input type="submit" value="Save" class="save_style but_save_popup">
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
  <div class="privacy">
    <span class="privacy_text">Deafult Post</span>
    <%= form_tag profiles_path, :method => 'put', :id => 'setting-form-auto' do  %>
      <div>
        <table class="account_setting_table">
          <tbody>
            <tr>
              <td class="td_tittle">&nbsp;</td>
              <td class="td_radio">Always</td>
              <td class="td_radio">Ask</td>
              <td class="td_radio">Never</td>
              <td>&nbsp;</td>
            </tr>
            <tr>
              <td class="border_bottom_table td_tittle">Auto-shorten URL</td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_auto_shorten_url]" value="always" <# if(setting_auto_shorten_url == 'always'){ #> checked="checked" <# } #> ></td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_auto_shorten_url]" value="ask" <# if(setting_auto_shorten_url == 'ask'){ #> checked="checked" <# } #> ></td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_auto_shorten_url]" value="never" <# if(setting_auto_shorten_url == 'never'){ #> checked="checked" <# } #> ></td>
              <td class="border_bottom_table">&nbsp;</td>
            </tr>
            <tr>
              <td class="border_bottom_table td_tittle">Auto Complete</td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_auto_complete]" value="always" <# if(setting_auto_complete == 'always'){ #> checked="checked" <# } #> ></td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_auto_complete]" value="ask" <# if(setting_auto_complete == 'ask'){ #> checked="checked" <# } #> ></td>
              <td class="border_bottom_table td_radio"><input type="radio" name="profile[setting_auto_complete]" value="never" <# if(setting_auto_complete == 'never'){ #> checked="checked" <# } #> ></td>
              <td class="border_bottom_table">&nbsp;</td>
            </tr>
            <tr>
              <td class="td_tittle">&nbsp;</td>
              <td class="td_radio">&nbsp;</td>
              <td class="td_radio">&nbsp;</td>
              <td class="td_radio">&nbsp;</td>
              <td>
                <input type="submit" value="Save" class="save_style but_save_popup">
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
  <div class="privacy">
    <span class="privacy_text">Connections and Cross-posts<a class="connect_cross" href="">(what is this?)</a></span>
    <%= form_tag connections_path, :id => 'setting-form-conn' do  %>
      <div>
        <table class="account_setting_table" id="setting-crosspost-table">
          <thead>
            <tr>
              <td class="td_tittle">&nbsp;</td>
              <td class="td_radio">Allow</td>
              <td class="td_radio">Deny</td>
              <td class="td_radio">Always Cross-post</td>
              <td>&nbsp;</td>
            </tr>
          </thead>
          <!--- Connection -->
          <tbody>

          </tbody>

          <tfoot>
            <tr>
              <td class="td_tittle" colspan="4">
                <span class="connect_cross">Add Connection</span>
                <select name="connect-cross-options" id="connect-cross-options" onchange="if(this.value){location.href=this.value;}">
                  <option value="">Choose Provider</option>
                  <option value="/auth/facebook_connection">Facebook</option>
                  <option value="/auth/twitter_connection">Twitter</option>
                </select>
              </td>
              <td>
                 <%= submit_tag 'Save', :class => 'save_style but_save_popup' %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    <% end %>
  </div>
</script>