<script type="text/template" id="forgot-password-template">

  <div class="signUp_content main_content">
    <div class="opening_text">
      <div id="main-middle-forgot-password-alert"></div>
      <p class="line_two">Forgot Password</p>
    </div>
    <%= form_tag notify_forgot_password_path(:format => :json), :id => 'forgot-password-form' do -%>

      <table class="box_registration">
        <tbody>
          <tr class="reg_email">
            <td class="label_registration">
              <%= label_tag 'forgot_password_email', 'Email' %>
              <%= text_field_tag 'forgot_password[email]', nil %>
            </td>
            <td class="alert_registration main-forgot-password-form-field-alert">
              <p class="default_text">
                <%= label_tag 'forgot_password_email', 'must be 6 characters or more' %>
              </p>
              <p class="error hidden"></p>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="bottom_registrationPath">
        <br class="clear"/>

        <div class="reg_agreedButton green_button">
          <%= submit_tag 'Recover Password' %>
        </div>
        <div class="clear"></div>
      </div>
    <% end %>
    <div class="clear"></div>
  </div>
</script>
