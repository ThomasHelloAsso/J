<head>
  <meta charset="utf-8">

  <title>Jotky Beta</title>
  <meta name="description" content="Jotky Beta">
  <meta name="author" content="Rachmat Maulana">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="icon" href="/assets/favicon.ico">
  <link rel="apple-touch-icon" href="/assets/apple-touch-icon.png">
  <link rel="apple-touch-icon" href="/assets/apple-touch-icon.png">
  <link rel="apple-touch-icon-precomposed" href="/assets/apple-touch-icon-precomposed.png">
  <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/assets/apple-touch-icon-72x72-precomposed.png">
  <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/assets/apple-touch-icon-114x114-precomposed.png">

  <link type="text/css" rel="stylesheet" media="screen" href="/assets/stylesheets/twitter.bootstrap.min.css">
  <link type="text/css" rel="stylesheet" media="screen" href="/assets/stylesheets/twitter.bootstrap-responsive.min.css">
  <link type="text/css" rel="stylesheet" media="screen" href="/assets/stylesheets/general.css">
  <link type="text/css" rel="stylesheet" media="screen" href="/assets/stylesheets/helper.css">  
  <script src="/assets/javascripts/modernizr-2.0.6.min.js"></script>
</head>

<body>
  <div class="container-fluid">
    <div class="navbar navbar-fixed-top">
      
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="#">Jotky API</a>
		    
		  <ul class="pull-right nav nav-tabs">
		  	<li><a href="<%= Server::Application.routes.url(:admin_auth_destroy)%>">Logout</a></li>
		  </ul>    
        </div>
       </div>
    </div>
    
    <div class="row">
      <h1>Client Applications</h1>	
    </div>
    <div class="row">
      <table class="table table-striped table-bordered table-condensed">
	    <thead>
		  <tr>
		    <th>App Name</th>
		    <th>App ID</th>
		    <th>App Secret Key</th>
		    <th>App Url</th>
		    <th colspan="2">Action</th>	
		  </tr>
	    </thead>
	
		<tbody>
		  <% if clients.present? %>
		    <% clients.each do |client| %>	
			  <tr>
			    <td><%= client.name %></td>
			    <td><%= client.id %></td> 
			    <td><%= client.secret_key %></td> 
			    <td><%= client.reset_password_confirmation_url %></td>
			    <td><a href="<%= Server::Application.routes.url :admin_clients_edit, :client_id => client.id %>">Edit</a></td>
			    <td><a href="<%= Server::Application.routes.url :admin_clients_destroy, :client_id => client.id %>">Delete</a></td>
			  </tr>	
		    <% end %>
		  <% else %>
		    <tr>
			  <td colspan="6">Data not found</td>
			</tr>   
		  <% end %>	
		   
	    </tbody>
	  </table>
	  <div class="row">
	  	<div class="pull-right">
	  	  <a href="<%= Server::Application.routes.url(:admin_clients_new) %>" class="btn btn-primary">Add Client App</a>
	  	</div>
	  </div>
    </div>
  	
  </div>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="/assets/javascripts/jquery-1.7.1.min.js"><\/script>');</script>
  <script src="/assets/javascripts/twitter.bootstrap.min.js"></script>
  <script src="/assets/javascripts/application.js"></script>
</body>
</html>
