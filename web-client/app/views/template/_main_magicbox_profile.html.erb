<script id="main-magicbox-profile-template" type="text/template">

<div class="about">
        <div class="about_top content">
          <div class="left">
            <a href="#change_avatar" class="about_avatar" rel="facebox">&nbsp;</a>
          </div>
          <div class="left">
            <div class="big_badge">0</div>
            <div class="nickname_realname">
              <span class="nickname"><%= @current_user['username'] %></span>
              <br class="clear" />
              <span class="realname"><%= @current_user['realname'] %></span>
            </div>
            <div class="clear"></div>
          </div>
          <div class="clear"></div>
        </div>
        <div class="about_link">
          <span>0 Tags</span>
          <span class="no_margin_left">0 Jots</span>
          <span class="no_margin_left">0 Follows</span>
        </div>
        <div class="clear"></div>
 </div>


  <div class="change_tab">
        <div class="bio">
          <div class="bio_tag">
            <span>Bio</span>
            <% if @current_user['bio'].present? %>
              <a id="bioContent" href="#" class="empty_bio_text"><%=  @current_user['bio'] %></a>
            <% else %>
              <a id="bioContent" href="#" class="empty_bio_text">click to edit your bio</a>
            <% end %>
            
          </div>
          
          <div class="jot_mode_hide" id="profile-bio-edit">


        </div>

          <div class="url_tag">
            <span>URL</span>
            <% if @current_user['url'].present? %>
              <a id="urlContent" href="#" class="empty_url_text"><%=  @current_user['url'] %></a>
            <% else %>
              <a id="urlContent" href="#" class="empty_url_text">click to edit your URL</a>
            <% end %>

          </div>
          <div class="clear"></div>
        </div>
        <div class="location">
          <div class="left">
            <span class="location_text">Location</span>
            <a href="#" class="empty_location_text">click to edit your location</a>
           
          </div>
          <div class="right">
            <div class="map">&nbsp;</div>
          </div>
          <span></span>
          <div class="clear"></div>
        </div>
      </div>





 <div class="profile_bottom_links">
      <a href="#" class="pub_profile_link">
        <span class="prof_icon">&nbsp;</span>
        <span class="prof_text">View your public profile</span>
      </a>
      <a href="#" class="account_setting_link">
        <span class="acc_icon">&nbsp;</span>
        <span class="acc_text">Go to account setting</span>
      </a>
</div>


</script>

