<div id="main-magicbox-navigation" class="top_button">
  <a class="search_icon main-magicbox-navigation-search-link" href="<%= searches_path %>">
    <span class="img_1 main-magicbox-navigation-link-icon-1 img_1_not_active"></span>
    <span class="search_text main-magicbox-navigation-link-text search_text_not_active">Search</span>
    <span class="img_2 main-magicbox-navigation-link-icon-2"></span>
  </a>
  <a class="jot_icon main-magicbox-navigation-jot-link" href="<%= jots_path %>">
    <span class="img_1 main-magicbox-navigation-link-icon-1"></span>
    <span class="jot_text main-magicbox-navigation-link-text jot_text_active">Jot</span>
    <span class="img_2 main-magicbox-navigation-link-icon-2"></span>
  </a>
  <% if @current_user.present? %>
   <div class="right">
    <a class="new_update_notactive r-notification-tab" href="#" id="r-notification-tab">
        <span class="update_icon"></span>
        <span class="update_text">24 New Updates</span>
      </a>
      <a id="user_logged" class="sign_up" href="<%= profiles_path %>">
        <img alt="" src="/assets/little-avatar.png">
        <span class="nickname_logged"><%= @current_user['username'] %></span>
        <span class="user_little_badge">0</span>
      </a>
   </div>
 <% else %>
  <a class="sign_up main-magicbox-navigation-login-link" href="<%= new_authentication_path %>">
    Sign up or Login
  </a>
   <% end %>
  <div class="clear"></div>
</div>

<div id="main-magicbox-jot-input" class="magicbox-content-tab">

  <%= form_tag jots_path(:format => 'json'), :id => 'main-magicbox-jot-input-form' do %>
    <div class="jot_search search jot-tab-content clearfix">
      <%= text_field_tag 'jot[title]', nil, :placeholder => 'Tags, places, users, search from them here!',
        :id => 'jot-search-field', :autocomplete => :off %>
      <%= submit_tag '' %>
    </div>


    <div class="jot_buttons_path jot-tab-content">
      <div class="left">
        <ul>
          <li>
            <a id="jot-bar-write-more" class="write_more_but jot_buttons_color jot-bar-button" href="#">
              <span class="jot_write_icon">&nbsp;</span>
              <span class="jot_button_text">Write more</span>
            </a>
          </li>
          <li>
            <a id="jot-bar-clip" class="clip_but jot_but jot_buttons_color jot-bar-button" href="#">
              <span class="jot_clip_icon">&nbsp;</span>
              <span class="jot_button_text">Clip</span>
            </a>
          </li>
          <li>
            <a id="jot-bar-location" class="jot_but loc_but jot_buttons_color jot-bar-button" href="#">
              <span class="jot_location_icon">&nbsp;</span>
              <span class="jot_button_text">Location</span>
            </a>
          </li>
          <li>
            <a id="jot-bar-tag" class="jot_but tags_but jot_buttons_color jot-bar-button" href="#">
              <span class="jot_tags_icon">&nbsp;</span>
              <span class="jot_button_text">Tags</span>
            </a>
          </li>
          <li>
            <a id="jot-bar-facebook" class="jot_buttons_color jot_facebook jot-bar-button" href="#">
              <span class="jot_fb_icon">&nbsp;</span>
            </a>
          </li>
          <li>
            <a id="jot-bar-twitter" class="jot_buttons_color no_margin_right jot-bar-button" href="#">
              <span class="jot_twitter_icon">&nbsp;</span>
            </a>
          </li>
        </ul>
      </div>
      <div class="jot_button_right">
        <span id="jot-input-text-length" class="jot_count">140</span>
        <a class="jot_down_arrow" href="">&nbsp;</a>
      </div>
    </div>
    <div id="jot-input-more" class="jot_mode_hide">

      <input type="submit" value="Jot" class="jot_green_bg">
      <div class="clear"></div>
    </div>
  <% end %>
</div>